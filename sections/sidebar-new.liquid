{% schema %}
    {
        "name": "Sidebar New",
        "settings": [
            {
                "type": "link_list",
                "id": "sidebar_menu",
                "default": "esme-menu",
                "label": "Sidebar Menu"
            }
        ]
    }
{% endschema%}